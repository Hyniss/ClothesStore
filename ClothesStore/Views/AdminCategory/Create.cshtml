@using BusinessObject.DTO
@model CategoryDTO

<br />
<div class="inbox">
    <div class="col-md-12 compose-right">
        <div class="inbox-details-default">
            <div class="inbox-details-heading">
                Category
            </div>
            <div class="inbox-details-body">
                @if (@ViewData["Message"] != null)
                {
                    <div class="alert alert-info">
                        @ViewData["Message"]
                    </div>
                }
                <form asp-action="create" class="com-mail">
                    <label>Category Name</label>
                    <input asp-for="@Model.CategoryName" type="text">
                    <div class="form-group">
                        <label class="control-label">Category General</label>
                        <select asp-for="@Model.CategoryGeneral" class="form-control" asp-items="ViewBag.sl"></select>
                    </div>
                    <label>Description</label>
                    <textarea asp-for="@Model.Description" rows="6"></textarea>
                    <div class="form-group">
                        <label asp-for="@Model.IsActive"></label>
                        <input asp-for="@Model.IsActive" type="checkbox" />
                    </div>
                    <input type="submit" value="Save">
                </form>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
