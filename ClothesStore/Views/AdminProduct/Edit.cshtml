@using BusinessObject.DTO
@model ProductCreateUpdateDTO

<br />
<div class="inbox">
    <div class="col-md-12 compose-right">
        <div class="inbox-details-default">
            <div class="inbox-details-heading">
                Product
            </div>
            <div class="inbox-details-body">
                @if (@ViewData["Message"] != null)
                {
                    <div class="alert alert-info">
                        @ViewData["Message"]
                    </div>
                }
                <form asp-action="edit" class="com-mail">
                    <label>Id</label>
                    <input asp-for="@Model.ProductId" type="text" readonly>
                    <label>Product Name</label>
                    <input asp-for="@Model.ProductName" type="text">
                    <div class="form-group">
                        <label asp-for="@Model.CategoryId">Category:</label><br />
                        <select asp-for="@Model.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <label>Description</label>
                    <textarea asp-for="@Model.QuantityPerUnit" rows="6"></textarea>
                    <label>Unit Price</label><br />
                    <input asp-for="@Model.UnitPrice" type="number" step="0.01"><br />
                    <label>Units In Stock</label><br />
                    <input asp-for="@Model.UnitsInStock" type="number"><br />
                    <label>Units On Order</label><br />
                    <input asp-for="@Model.ReorderLevel" type="number"><br />
                    <label>Picture</label><br />
                    <input asp-for="@Model.Picture" type="text"><br />
                    <div class="form-group">
                        <label asp-for="@Model.Discontinued"></label>
                        <input asp-for="@Model.Discontinued" type="checkbox" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.IsActive"></label>
                        <input asp-for="@Model.IsActive" type="checkbox" />
                    </div>
                    <input type="submit" value="Save">
                </form>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
